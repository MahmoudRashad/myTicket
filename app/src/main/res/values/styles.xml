<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#8E0920</item>
        <item name="colorPrimaryDark">#8E0920</item>
        <item name="colorAccent">#8E0920</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">#8E0920</item>
        <item name="colorPrimaryDark">#8E0920</item>
        <item name="colorAccent">#8E0920</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlNormal">@color/grey_star</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#8E0920</item>
        <item name="colorPrimaryDark">#8E0920</item>
        <item name="colorAccent">#8E0920</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinner_style" >
        <item name="android:popupBackground">@color/white</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@color/green_tab</item>
        <item name="android:layout_marginStart">32dp</item>
    </style>

    <style name="AppTheme.green" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/green_tab</item>
        <item name="colorPrimaryDark">@color/green_tab</item>
        <item name="colorAccent">@color/green_tab</item>
    </style>


</resources>
