<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/white_rect_bk"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    >

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/search_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:foreground="@drawable/red_rect"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/search_SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="The Sub title"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@id/search_image"
        app:layout_constraintTop_toBottomOf="@id/search_title"
     />
    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="The title"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/gray_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@id/search_image"
        app:layout_constraintTop_toTopOf="@+id/search_image" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fui_transparent"
        app:layout_constraintTop_toBottomOf="@id/search_image"
        android:layout_marginTop="8dp"
        />
