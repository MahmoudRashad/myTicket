<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".ForgetPassword">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:src="@drawable/my_ticket_white_logo"/>
        <TextView
            android:id="@+id/forget_title"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="@id/main_logo"
            app:layout_constraintEnd_toEndOf="@id/main_logo"
            app:layout_constraintTop_toBottomOf="@id/main_logo"
            android:layout_marginTop="28dp"
            android:text="RESET YOUR PASSWORD"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textColor="#fff"
            />

        <LinearLayout
            android:id="@+id/forget_email_linear"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forget_title"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_corners"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forget_text_title"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="EMAIL"
                android:textAlignment="center"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/email_forget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="#8E0920"

                />
        </LinearLayout>

    <Button
        android:id="@+id/forget_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/forget_email_linear"
        android:layout_marginTop="32dp"
        android:text="SEND RESET LINK"/>

</android.support.constraint.ConstraintLayout>