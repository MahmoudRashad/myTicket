<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/details_layout"
    android:fitsSystemWindows="true"
    android:background="#4A0E0E"
    >



    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bk_empty"
        android:minHeight="48dp"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary"
          >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:layout_collapseMode="parallax">



            <ImageView
                android:id="@+id/cover_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/endgame"
                />
                <ImageView
                    android:id="@+id/gradient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:alpha="0.4"
                    android:src="@drawable/gradient_bg"
                    />
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/details_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Avengers"
                android:textSize="22sp"

                android:textColor="#fff"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="bottom"/>
            <ImageView
                android:id="@+id/icon_share_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                />
            <ImageView
                android:id="@+id/icon_play_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                />



        </android.support.design.widget.CollapsingToolbarLayout>

        <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--app:layout_collapseMode="pin"-->
            <!--app:contentInsetStart="48dp"-->
            <!--/>-->

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="#fff"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_movie_date"
                />

            <TextView
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#fff"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:background="@drawable/white_rect_bk"
                android:text="Action"
                android:padding="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/detail_movie_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13/2/2018"
                android:textColor="#fff"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_text"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                />

            <TextView
                android:id="@+id/rating_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view_line"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Rating"
                android:textColor="#fff"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"


                />
            <include
                android:id="@+id/linear_stars"
                layout="@layout/linear_stars" />

            <TextView
                android:id="@+id/avg_movie_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.5"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#fff"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/linear_stars"
                app:layout_constraintBottom_toBottomOf="@id/linear_stars"
                app:layout_constraintStart_toEndOf="@id/linear_stars"/>

            <Button
                android:id="@+id/make_movie_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/view_line"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                android:padding="8dp"
                android:text="Make a Review !"
                android:background="@drawable/white_rect_bk"
                android:backgroundTint="@color/yellow"
                />

            <TextView
                android:id="@+id/reviews_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#fff"
                app:layout_constraintStart_toEndOf="@id/star_number"
                app:layout_constraintTop_toBottomOf="@id/make_movie_review"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/reviews_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/reviews_number_title"
                app:layout_constraintTop_toTopOf="@id/reviews_number_title"
                android:layout_marginEnd="16dp"
                android:text="2500"
                android:textColor="#fff"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />
            <ImageView
                android:id="@+id/star_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_yellow_little_star"
                app:layout_constraintStart_toStartOf="@id/make_movie_review"
                app:layout_constraintTop_toTopOf="@id/reviews_number_title"
                app:layout_constraintBottom_toBottomOf="@id/reviews_number_title"
                android:layout_marginStart="4dp"

              />




        </android.support.constraint.ConstraintLayout>




    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:layout_width="248dp"
        android:layout_height="248dp"
        android:layout_gravity="bottom"
        android:src="@drawable/tickets_bk"
        />


    <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
        android:id="@+id/custom_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:elevation="8dp"
        app:fabIcon="@drawable/ic_tickets"
        app:fabText="Reserve"
        app:fabTextColor="#8E0920"
        app:fabColor="#fff"
        app:fabType="roundedSquare" />

    <Button
        android:id="@+id/dropdown_revs"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/ic_dropdown"
        android:layout_marginBottom="16dp"/>










</android.support.design.widget.CoordinatorLayout>

