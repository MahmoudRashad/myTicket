<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical">




    <android.support.constraint.ConstraintLayout
        android:id="@+id/topConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_collapseMode="parallax">



        <ImageView
            android:id="@+id/cover_photo_cinema"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/cinema"
            />
        <!--<ImageView-->
            <!--android:id="@+id/gradient"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="300dp"-->
            <!--android:scaleType="fitXY"-->
            <!--app:layout_constraintStart_toStartOf="parent"-->
            <!--app:layout_constraintTop_toTopOf="parent"-->
            <!--android:alpha="0.4"-->
            <!--android:src="@drawable/gradient_bg"-->
            <!--/>-->
        <ImageView
            android:id="@+id/icon_play_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cover_photo_cinema"
            android:src="@drawable/play"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            />
        <ImageView
            android:id="@+id/icon_share_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/icon_back_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backward_arrow_1"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <TextView
            android:id="@+id/details_cinema_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Cinema"
            android:textSize="22sp"
            android:textColor="#fff"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cover_photo_cinema"
            />
        <Button
            android:id="@+id/cinema_movies_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cover_photo_cinema"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_theaters_24px"
            android:drawableTint="@color/colorAccent"
            android:background="@drawable/white_rect_bk"
            android:textColor="@color/colorAccent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:drawablePadding="8dp"
            android:text="Movies List"/>
        <TextView
            android:id="@+id/detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="135 address street"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cinema_movies_list_btn"
            />

        <TextView
            android:id="@+id/detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From 10 to 12"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:textColor="#fff"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_address" />

        <Button
            android:id="@+id/cinema_movies_location_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_time"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_near_me_24px"
            android:drawableTint="@color/colorAccent"
            android:background="@drawable/white_rect_bk"
            android:textColor="@color/colorAccent"
            android:drawablePadding="8dp"
            android:text="Cinema Location"/>



        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_time"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="82dp"
            android:layout_marginBottom="24dp"
            />

        <TextView
            android:id="@+id/rating_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_line"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Rating"
            android:textColor="#fff"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"


            />
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rating_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:theme="@style/RatingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator" />

        <TextView
            android:id="@+id/avg_cinema_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.5"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#fff"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/rating_bar"
            app:layout_constraintBottom_toBottomOf="@id/rating_bar"
            app:layout_constraintStart_toEndOf="@id/rating_bar"/>

        <Button
            android:id="@+id/make_cinema_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/view_line"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="4dp"
            android:padding="8dp"
            android:text="Make a Review !"
            android:background="@drawable/white_rect_bk"
            android:backgroundTint="@color/yellow"
            />

        <TextView
            android:id="@+id/reviews_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#fff"
            app:layout_constraintStart_toEndOf="@id/star_number"
            app:layout_constraintTop_toBottomOf="@id/make_cinema_review"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/reviews_cinema_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/reviews_number_title"
            app:layout_constraintTop_toTopOf="@id/reviews_number_title"
            android:layout_marginEnd="16dp"
            android:text="2500"
            android:textColor="#fff"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />
        <ImageView
            android:id="@+id/star_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_yellow_little_star"
            app:layout_constraintStart_toStartOf="@id/make_cinema_review"
            app:layout_constraintTop_toTopOf="@id/reviews_number_title"
            app:layout_constraintBottom_toBottomOf="@id/reviews_number_title"
            android:layout_marginStart="4dp"

            />


        <Button
            android:id="@+id/dropdown_revs"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:background="@drawable/ic_dropdown"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <include
        layout="@layout/write_review"
        />
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/all_reviews_layout"
        />
    <include
        layout="@layout/submitted_layout"
        />


</android.support.constraint.ConstraintLayout>