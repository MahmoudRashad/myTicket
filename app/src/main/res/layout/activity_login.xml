<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back"
    tools:context=".Login">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:src="@drawable/my_ticket_white_logo"/>
    <TextView
        android:id="@+id/login_title"
        android:layout_width="52dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@id/main_logo"
        app:layout_constraintEnd_toEndOf="@id/main_logo"
        app:layout_constraintTop_toBottomOf="@id/main_logo"
        android:layout_marginTop="28dp"
        android:text="LOGIN"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textColor="#fff"
        />

    <LinearLayout
        android:id="@+id/login_username_linear"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_corners"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username_login_title"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="USERNAME"
            android:textAlignment="center"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/username_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="#8E0920"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_password_linear"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_username_linear"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_corners"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/password_login_title"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="PASSWORD"
            android:textAlignment="center"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/password_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="#8E0920"

            />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame_login"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_password_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ProgressBar
            android:id="@+id/progressBar_login"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:text="Login"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/phone_linear"
            app:layout_constraintStart_toStartOf="parent"
            />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/frame_login"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="forget password ?"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/frame_login"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Create new Account ?"
        app:layout_constraintEnd_toEndOf="parent"/>





</android.support.constraint.ConstraintLayout>



