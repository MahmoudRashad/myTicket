<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BB000000"
        android:id="@+id/frame_make_review"
    android:visibility="gone"
        >
    <ImageView
        android:id="@+id/close_review_movie"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_close_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"/>
        <LinearLayout
        android:id="@+id/linear_pop_review"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@drawable/white_rect_bk"
        android:layout_gravity="center"
        android:elevation="12dp"
        android:orientation="vertical">

        <!--<include-->
        <!--layout="@layout/linear_stars"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_margin="16dp"/>-->

         <RatingBar
                android:id="@+id/movie_write_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:theme="@style/RatingBar"
                style="@style/Widget.AppCompat.RatingBar"/>

        <View
        android:id="@+id/rev_view_line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E9E9E9"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />
        <EditText
        android:id="@+id/subject_rev_detail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Review"
        android:gravity="top"
        android:maxLength="140"
        android:background="@android:color/transparent"
            android:textColorHint="@color/grey_star"
            android:textColor="#000"
        />
        <View
        android:id="@+id/rev_view_line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E9E9E9"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="bottom"
        />
        <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="Submit"
        android:textColor="@color/colorAccent"
        android:background="@drawable/rect_grey"
        android:layout_marginTop="16dp"

        android:elevation="6dp"
        />
        <!--<TextView-->
        <!--android:id="@+id/max_letters"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="(0/140)"-->
        <!--android:layout_gravity="end"-->
        <!--android:layout_marginStart="16dp"-->
        <!--android:layout_marginEnd="16dp"-->
        <!--/>-->

        </LinearLayout>
    </FrameLayout>
