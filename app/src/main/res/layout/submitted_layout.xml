<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BB000000"
    android:id="@+id/submitted_layout"
    android:visibility="gone"
   >

    <ImageView
        android:id="@+id/close_review_result_movie"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_close_24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"/>

    <LinearLayout
        android:id="@+id/linear_pop_review_submitted"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@drawable/white_rect_bk"
        android:layout_gravity="center"
        android:elevation="12dp"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/big_star_submitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/big_star"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="38dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/submitted_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks For Your Feedback !"
            android:textSize="20dp"
            android:layout_margin="4dp"
            android:textColor="#000"
            android:layout_gravity="center"/>

    </LinearLayout>
</FrameLayout>